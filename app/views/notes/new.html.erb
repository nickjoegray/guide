<form accept-charset="UTF-8" action="/notes" method="post">
  <div style="margin:0;padding:0">
    <input name="utf8" type="hidden" value="&#x2713;" />
  </div>

  <% if @note.errors.any? %>
    <div class="errors">
      <h3>Please fix the following errors</h3>
      <ul>
        <% @note.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="redactor_content">
  <%= form_for @note, :url => { :action => "create"}, :html => { :class => "note_form"} do |f| %>
    </br><%= text_area_tag :title, @note.title, :class => "redactor_title", :rows => 1, :cols => 60 %></br>
    <%= text_area_tag :"notes[content]", @note.content, :class => "redactor", :rows => 200, :cols => 120 %>
    <%= f.submit "Create Note", :class => "btn" %>
  <% end %>
  </div>
</form>
